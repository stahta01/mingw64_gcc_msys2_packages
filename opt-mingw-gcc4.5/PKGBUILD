  "${OPT_MINGW_PACKAGE_PREFIX}-crt"
  "${OPT_MINGW_PACKAGE_PREFIX}-headers"
  "${OPT_MINGW_PACKAGE_PREFIX}-libiconv"
  "${OPT_MINGW_PACKAGE_PREFIX}-zlib"
  "${OPT_MINGW_PACKAGE_PREFIX}-windows-default-manifest"
)
#checkdepends=('dejagnu')
optdepends=()

